# Environment variables pentru Docker deployment
# Copiază acest fișier în .env pentru configurare locală

# Application Settings
NODE_ENV=production
PORT=8080

# Database
DB_PATH=/app/data/ainvestorhood.db

# AI Configuration
# Setează aici API keys și configurații default
# OPENAI_API_KEY=sk-your-openai-api-key-here
# AI_PROVIDER=openai
# OLLAMA_MODEL=llama2
# CUSTOM_PROMPT=

# Network Settings
OLLAMA_HOST=http://ollama:11434
REDIS_URL=redis://redis:6379

# Security
# Schimbă această cheie secretă în producție!
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=info

# External Services
# Pentru servicii externe dacă sunt necesare
# EXTERNAL_API_URL=
# WEBHOOK_SECRET=

# Performance
# Configurări pentru optimizare
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30000
CACHE_TTL=300

# Features
ENABLE_SCRAPY=true
ENABLE_WEBSOCKETS=true
ENABLE_REAL_TIME_MONITORING=true

# Development (doar pentru debug)
DEBUG=false
VERBOSE_LOGGING=false