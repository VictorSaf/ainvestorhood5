FROM nginx:alpine

# Copy nginx configuration
COPY nginx.conf /etc/nginx/nginx.conf

# Create SSL directory (even if empty initially)
RUN mkdir -p /etc/nginx/ssl

# Copy SSL certificates if they exist (optional)
COPY ssl/ /etc/nginx/ssl/

# Note: nginx -t will be performed at container startup when DNS is available

# Expose ports
EXPOSE 80 443

# Use default nginx entrypoint
CMD ["nginx", "-g", "daemon off;"]